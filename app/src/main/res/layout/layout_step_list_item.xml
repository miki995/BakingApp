<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_step"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_layout_step"
    android:background="@color/colorTheme">

    <TextView
        android:id="@+id/text_view_step"
        android:layout_width="@dimen/width_text_view_step"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_text_view_step"
        android:layout_marginStart="@dimen/margin_text_view_step"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text_view_step_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

</android.support.constraint.ConstraintLayout>